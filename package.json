{
  "name": "chatapp",
  "version": "1.0.0",
  "description": "Chat-app server",
  "main": "index.js",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.1.0",
    "express": "^4.17.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/register": "^7.6.2",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.6",
    "cross-env": "^6.0.0",
    "eslint": "^6.5.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.7",
    "lint-staged": "^9.4.0",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "regenerator-runtime": "^0.13.3"
  },
  "scripts": {
    "test": "nyc mocha --require @babel/register --require regenerator-runtime/runtime --exit",
